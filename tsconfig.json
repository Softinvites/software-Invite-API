{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "rootDir": "src",  
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "types": ["node"],   
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}