{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "rootDir": "src",  
    "outDir": "dist",
    "resolveJsonModule": true,
    // "skipLibCheck": false,
    "types": ["node"], 
    "skipLibCheck": true  
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}